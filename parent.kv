Home:
    Login:
    Main:
    Game:
    Instructions:

<Main>:
    name: "main"
    GridLayout:
        cols: 1
        Button:
            text:"Jogar"
            on_release:
                app.root.current = "game"
                root.manager.transition.direction = "left"
        Button:
            text:"Instruções"
            on_release:
                app.root.current = "instructions"
                root.manager.transition.direction = "left"

<Login>:
    name: "login"
    username: username
    GridLayout:
        cols:1
        size:root.width, root.height
        GridLayout:
            cols:2
            Label
                text: "Username: "
            TextInput:
                id: username
                multiline:False
                background_color: 1, 1, 1, 1
        Button:
            text:"Confirmar"
            background_color: 0.8, 0, 0.6, 1
            pos_hint: {"x":0.2, "y":.4}
            size_hint: 0.3, 0.2
            on_press:root.btn()
            on_release:
                app.root.current = "main" if username.text == "Victor" or username.text == "Pedro" else "login"
                root.manager.transition.direction = "left"


<Game>:
    name: "game"
    GridLayout:
        cols: 1
        Button:
            text:"Voltar"
            on_press:root.reset()
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"
        Label:
            text: root.content
            id: content
        Button:
            id: answer
            text: "Responder"
            background_color: 0.8, 0, 0.6, 1
            pos_hint: {"x":0.2, "y":.4}
            size_hint: 0.3, 0.2
            on_press:root.first()

        Button:
            id: contentA
            text:root.contentA
            background_color: 0.8, 0, 0.6, 1
            pos_hint: {"x":0.2, "y":.4}
            size_hint: 0.3, 0.2
            on_press:root.btnA()
        Button:
            id: contentB
            text:root.contentB
            background_color: 0.8, 0, 0.6, 1
            pos_hint: {"x":0.2, "y":.4}
            size_hint: 0.3, 0.2
            on_press:root.btnB()
        Button:
            id: contentC
            text:root.contentC
            background_color: 0.8, 0, 0.6, 1
            pos_hint: {"x":0.2, "y":.4}
            size_hint: 0.3, 0.2
            on_press:root.btnC()
        Button:
            id: contentD
            text:root.contentD
            background_color: 0.8, 0, 0.6, 1
            pos_hint: {"x":0.2, "y":.4}
            size_hint: 0.3, 0.2
            on_press:root.btnD()



<Instructions>:
    name: "instructions"
    GridLayout:
        cols: 1
        Button:
            text:"Voltar"
            background_color: 0.8, 0, 0.6, 1
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"
        Label:
            text: " - Serão exibidas um total de 16 perguntas na tela, cada uma poderá ser respondida por apenas um jogador. \n - Para responder a pergunta, pressione o botão físico. \n - Quem pressionar o botão primeiro, terá o direito de resposta. \n - Para responder a pergunta, pressione o botão da alternativa que considere correta. \n - Vence quem, ao final das 16 rodadas, possuir mais pontos."
